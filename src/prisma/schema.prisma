model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  email       String?
  password    String?
  firstName   String?
  lastName    String?
  phoneNumber String?
}

model Product {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  slug              String
  price             Float?
  quantity          Int?
  unit              String?
  sold              Int?
  sale_price        Float?
  min_price         Float?
  max_price         Float?
  image             Json
  sku               String?
  gallery           Json[]
  category          Json?
  tag               Json[]
  variations        Json?
  description       String
  variation_options Json?
  product_type      String?
}

